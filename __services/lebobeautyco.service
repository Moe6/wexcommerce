[Unit]
Description=lebobeautyco backend server
Wants=mongod.service
After=mongod.service

[Service]
ExecStart=/usr/bin/npm start
WorkingDirectory=/opt/lebobeautyco/backend
Type=simple
Restart=always
StandardOutput=append:/var/log/lebobeautyco.log
StandardError=append:/var/log/lebobeautyco.log

[Install]
WantedBy=multi-user.target
