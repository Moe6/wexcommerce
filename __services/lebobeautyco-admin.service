[Unit]
Description=lebobeautyco admin panel
Wants=lebobeautyco.service
After=lebobeautyco.service

[Service]
ExecStart=/usr/bin/npm run start
WorkingDirectory=/opt/lebobeautyco/admin
Type=simple
Restart=always
StandardOutput=append:/var/log/lebobeautyco-admin.log
StandardError=append:/var/log/lebobeautyco-admin.log

[Install]
WantedBy=multi-user.target
